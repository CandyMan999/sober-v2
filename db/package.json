{
  "name": "sober-motivation-v2",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "yarn dev",
    "dev": "concurrently \"yarn start:client\" \"yarn dev:server\"",
    "start:client": "cd client && npx expo start",
    "db:add-venues": "node ./seeders/addBarOrLiquor",
    "db:add-quotes": "node ./seeders/addQuotes",
    "db:add-milestones": "node ./seeders/addMilestoneImages",
    "dev:server": "NODE_ENV=development nodemon --exec babel-node server.js",
    "android": "cd client && npx expo start --android",
    "ios": "cd client && npx expo start --ios",
    "web": "cd client && npx expo start --web"
  },
  "dependencies": {
    "@graphql-tools/schema": "^10.0.12",
    "apollo-server": "^3.13.0",
    "apollo-server-express": "^3.13.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "expo": "~54.0.24",
    "expo-server-sdk": "^4.0.0",
    "expo-status-bar": "~3.0.8",
    "express": "^5.1.0",
    "form-data": "^4.0.0",
    "graphql": "^16.12.0",
    "graphql-playground-middleware-express": "^1.7.23",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload-minimal": "^1.6.3",
    "luxon": "^3.7.2",
    "moment": "^2.30.1",
    "mongoose": "^8.20.0",
    "node-cron": "^4.2.1",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "subscriptions-transport-ws": "^0.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/node": "^7.28.0",
    "concurrently": "^9.0.0",
    "nodemon": "^3.1.0"
  }
}
